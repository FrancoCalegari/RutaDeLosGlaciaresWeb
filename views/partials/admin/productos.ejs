<section id="productos-admin">
  <h2>Administrar Productos</h2>

  <div class="nuevo-producto">
    <input id="nombreProducto" placeholder="Nombre del producto">
    <input id="detalleProducto" placeholder="Detalle">
    <input id="extrasProducto" placeholder="Extras">
    <input id="precioProducto" type="number" placeholder="Precio">
    <input id="descuentoProducto" type="number" placeholder="Descuento (%)">
    <input id="imagenesProducto" placeholder="Rutas de imÃ¡genes separadas por coma">
    <button onclick="addProducto()">Agregar Producto</button>
  </div>

  <div class="lista-productos">
    <% productos.forEach(p => { %>
      <div data-producto="<%= p.id %>">
        <input class="nombreProducto" value="<%= p.nombreProducto %>">
        <input class="detalleProducto" value="<%= p.detalleProducto %>">
        <input class="extrasProducto" value="<%= p.extrasProducto %>">
        <input class="precioProducto" value="<%= p.precioProducto %>">
        <input class="descuentoProducto" value="<%= p.descuentoProducto %>">
        <input class="imagenesProducto" value="<%= p.imagenesProducto.join(', ') %>">
        <button onclick="updateProducto(<%= p.id %>)">Actualizar</button>
        <button onclick="deleteProducto(<%= p.id %>)">Eliminar</button>
      </div>
    <% }) %>
  </div>
</section>
